<h1>Register new user</h1>

<%= render 'shared/errors', obj: @user %>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <%= form.submit "Register" %>
<% end %>